<h2>User request</h2>

  <div id="map" style="width:100%; height:500px"></div>

    
    
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDmdSevL7BsfOVoHJz99JA6wjCwtxtdCus&libraries=places"></script>   
<script>
      
  function initMap() {

    var myLatLng = {lat: {{{user.coordinates.lat}}}, lng: {{{user.coordinates.lng}}} }

  const map = new google.maps.Map(document.getElementById('map'), {
    center: myLatLng,
    mapTypeControl: false,
    zoom: 17
  });

  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    animation: google.maps.Animation.BOUNCE
  });


  var contentString = '<p> El usuario {{{user.name}}} {{{user.lastName}}} está aquí</p>';

  var infowindow = new google.maps.InfoWindow({
    content: contentString
  });

   marker.addListener('click', function() {
    infowindow.open(map, marker);
  });

};

initMap();
</script>
